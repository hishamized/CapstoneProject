@model IEnumerable<CapstoneProject.Models.Category>

<div class="max-w-7xl mx-auto p-6 bg-gray-800 rounded-lg shadow-lg"
     x-data="{ showModal: false, showDeleteModal: false, category: {} }">

    <h1 class="text-3xl font-bold mb-6 text-red-500">Manage Categories</h1>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="bg-green-600 text-white p-3 rounded mb-4">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="bg-red-600 text-white p-3 rounded mb-4">@TempData["Error"]</div>
    }

    <table class="min-w-full border-collapse border border-gray-700 text-gray-200">
        <thead>
            <tr class="bg-gray-900">
                <th class="border border-gray-600 px-4 py-2">ID</th>
                <th class="border border-gray-600 px-4 py-2">Name</th>
                <th class="border border-gray-600 px-4 py-2">Description</th>
                <th class="border border-gray-600 px-4 py-2">Image</th>
                <th class="border border-gray-600 px-4 py-2">Is Active</th>
                <th class="border border-gray-600 px-4 py-2">Created At</th>
                <th class="border border-gray-600 px-4 py-2">Updated At</th>
                <th class="border border-gray-600 px-4 py-2">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr class="hover:bg-gray-700">
                    <td class="border border-gray-600 px-4 py-2">@category.Id</td>
                    <td class="border border-gray-600 px-4 py-2">@category.Name</td>
                    <td class="border border-gray-600 px-4 py-2">@category.Description</td>
                    <td class="border border-gray-600 px-4 py-2">
                        @if (!string.IsNullOrEmpty(category.ImageUrl))
                        {
                            <a href="@category.ImageUrl" target="_blank" class="text-blue-400 underline">View Image</a>
                        }
                    </td>
                    <td class="border border-gray-600 px-4 py-2">@category.IsActive</td>
                    <td class="border border-gray-600 px-4 py-2">@category.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td class="border border-gray-600 px-4 py-2">@category.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td class="border border-gray-600 px-4 py-2 space-x-2">
                        <button class="bg-yellow-500 text-black px-3 py-1 rounded my-2"
                                @@click="showModal = true; category = {
                                    Id: '@category.Id',
                                    Name: '@category.Name',
                                    Description: '@category.Description',
                                    ImageUrl: '@category.ImageUrl',
                                    IsActive: '@category.IsActive'
                                }">
                            Edit
                        </button>
                        <button class="bg-red-500 text-white px-3 py-1 rounded my-2"
                                @@click="showDeleteModal = true; category = { Id: '@category.Id', Name: '@category.Name' }">
                            Delete
                        </button>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!-- Edit Modal -->
    <div x-show="showModal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50">
        <div class="bg-gray-800 p-6 rounded-lg w-1/2">
            <h2 class="text-xl font-bold text-red-500 mb-4">Edit Category</h2>
            <form asp-controller="Admin" asp-action="UpdateCategory" method="post" enctype="multipart/form-data">
                <input type="hidden" name="Id" x-model="category.Id" />

                <div class="mb-3">
                    <label class="block text-sm text-gray-300">Name</label>
                    <input type="text" name="Name" x-model="category.Name"
                           class="w-full px-3 py-2 rounded bg-gray-700 text-gray-200 border border-gray-600" />
                </div>

                <div class="mb-3">
                    <label class="block text-sm text-gray-300">Description</label>
                    <textarea name="Description" x-model="category.Description"
                              class="w-full px-3 py-2 rounded bg-gray-700 text-gray-200 border border-gray-600"></textarea>
                </div>

                <div class="mb-3">
                    <label class="block text-sm text-gray-300">Is Active</label>
                    <select name="IsActive" x-model="category.IsActive"
                            class="w-full px-3 py-2 rounded bg-gray-700 text-gray-200 border border-gray-600">
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="block text-sm text-gray-300">Current Image</label>
                    <template x-if="category.ImageUrl">
                        <a :href="category.ImageUrl" target="_blank" class="text-blue-400 underline">View Current</a>
                    </template>
                </div>

                <div class="mb-3">
                    <label class="block text-sm text-gray-300">Replace Image</label>
                    <!-- note: must match controller param name -->
                    <input type="file" name="newImageFile" class="text-gray-200"  />
                </div>

                <div class="mb-3">
                    <label class="flex items-center space-x-2">
                        <!-- note: must match controller param name -->
                        <input type="checkbox" name="deleteImage" value="true" class="h-4 w-4" />
                        <span class="text-gray-300">Delete current image</span>
                    </label>
                </div>

                <div class="flex justify-end space-x-2">
                    <button type="button" class="px-4 py-2 bg-gray-600 text-white rounded" @@click="showModal = false">Cancel</button>
                    <button type="submit" class="px-4 py-2 bg-red-500 text-white rounded">Save</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div x-show="showDeleteModal"
         x-cloak
         class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50">
        <div class="bg-gray-800 p-6 rounded-lg w-1/3">
            <h2 class="text-xl font-bold text-red-500 mb-4">Confirm Delete</h2>
            <p class="mb-4 text-gray-200">
                Are you sure you want to delete category "<span x-text="category.Name"></span>"?
            </p>
            <div class="flex justify-end space-x-2">
                <button type="button"
                        class="px-4 py-2 bg-gray-600 text-white rounded"
                        @@click="showDeleteModal = false">
                    Cancel
                </button>
                <form asp-controller="Admin"
                      asp-action="DeleteCategory"
                      method="post"
                      class="inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" x-model="category.Id" />
                    <button type="submit"
                            class="px-4 py-2 bg-red-500 text-white rounded">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>



</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
