@{
    ViewData["Title"] = "Admin Login";
}

<div class="bg-gray-900 min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md p-8 space-y-6 bg-gray-800 rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold text-center text-red-500">Admin Login</h2>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="bg-red-600 text-white text-sm p-2 rounded">
                @ViewBag.Message
            </div>
        }

        <form method="post" class="space-y-4">
            <div>
                <label class="block text-gray-300 mb-1">Username / Email / Phone</label>
                <input type="text" name="login" required
                       class="w-full px-4 py-2 rounded bg-gray-700 text-gray-100 focus:outline-none focus:ring-2 focus:ring-red-500"
                       placeholder="Enter username, email, or phone">
            </div>
            <div>
                <label class="block text-gray-300 mb-1">Password</label>
                <input type="password" name="password" required
                       class="w-full px-4 py-2 rounded bg-gray-700 text-gray-100 focus:outline-none focus:ring-2 focus:ring-red-500"
                       placeholder="Enter your password">
            </div>

            <button type="submit"
                    class="w-full py-2 px-4 bg-red-500 hover:bg-red-600 rounded text-white font-semibold transition duration-200">
                Login
            </button>
        </form>
    </div>
</div>
