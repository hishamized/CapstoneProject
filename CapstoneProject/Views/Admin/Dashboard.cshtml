@{
    ViewData["Title"] = "Admin Dashboard";
    var adminUsername = ViewBag.AdminUsername ?? "Admin";
}

<body class="bg-gray-900 text-gray-100 min-h-screen flex">
    <div x-data="{ sidebarOpen: true }" class="flex w-full">

        <!-- Sidebar -->
        <aside :class="sidebarOpen ? 'translate-x-0' : '-translate-x-full'"
               class="fixed md:relative z-30 w-64 bg-gray-800 border-r border-gray-700 h-screen p-6
                      transform transition-transform duration-300">
            <h2 class="text-2xl font-bold text-red-500 mb-8">Admin Panel</h2>
            <ul class="space-y-2">
                <li><a href="#" class="block px-3 py-2 rounded hover:bg-gray-700">Dashboard</a></li>
                <li><a href="#" class="block px-3 py-2 rounded hover:bg-gray-700">Admins</a></li>
                <li><a href="#" class="block px-3 py-2 rounded hover:bg-gray-700">Roles</a></li>
                <li><a href="#" class="block px-3 py-2 rounded hover:bg-gray-700">Settings</a></li>
            </ul>
        </aside>

        <!-- Main content -->
        <div class="flex-1 flex flex-col md:ml-64 transition-all duration-300">
            <!-- Top navbar / toggle button -->
            <nav class="flex items-center justify-between bg-gray-800 border-b border-gray-700 px-6 py-4">
                <button x-on:click="sidebarOpen = !sidebarOpen"
                        class="md:hidden bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                         stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
                <div>Hello, @adminUsername</div>
                <a href="/Admin/Logout"
                   class="bg-red-500 hover:bg-red-600 px-3 py-1 rounded text-white">Logout</a>
            </nav>

            <!-- Dashboard content -->
            <main class="p-6 flex-1 overflow-y-auto">
                <h1 class="text-3xl font-bold mb-6 text-red-500">Dashboard</h1>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <!-- Card example -->
                    <div class="bg-gray-800 p-6 rounded shadow hover:shadow-lg transition duration-200">
                        <h2 class="text-xl font-semibold mb-2">Total Admins</h2>
                        <p class="text-gray-300 text-2xl">5</p>
                    </div>
                    <div class="bg-gray-800 p-6 rounded shadow hover:shadow-lg transition duration-200">
                        <h2 class="text-xl font-semibold mb-2">Total Roles</h2>
                        <p class="text-gray-300 text-2xl">5</p>
                    </div>
                    <div class="bg-gray-800 p-6 rounded shadow hover:shadow-lg transition duration-200">
                        <h2 class="text-xl font-semibold mb-2">Pending Tasks</h2>
                        <p class="text-gray-300 text-2xl">12</p>
                    </div>
                </div>
            </main>

            <!-- Footer -->
            <footer class="bg-gray-800 border-t border-gray-700 text-gray-400 p-4 text-center">
                &copy; 2025 CapstoneProject - Admin Dashboard
            </footer>
        </div>
    </div>
</body>
